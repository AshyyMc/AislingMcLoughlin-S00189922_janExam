<Window x:Class="AislingMcLoughlin_S00189922.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AislingMcLoughlin_S00189922"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="383*"/>
            <ColumnDefinition Width="327*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listboxAccount" HorizontalAlignment="Left" Height="282" Margin="15,100,0,0" VerticalAlignment="Top" Width="283" Grid.ColumnSpan="2" Grid.Column="1" SelectionChanged="listboxAccount_SelectionChanged"/>
        <Label x:Name="labelAccountList" Content="Account List" HorizontalAlignment="Left" Margin="36,71,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
        <CheckBox x:Name="checkboxCurrentAccounts" Content="Current Accounts" HorizontalAlignment="Left" Margin="36,46,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1" Click="checkboxCurrentAccounts_Click"/>
        <CheckBox x:Name="checkboxSavingsAccounts" Content="Savings Account" HorizontalAlignment="Left" Margin="147.8,46,0,0" VerticalAlignment="Top" Grid.Column="2" Click="checkboxSavingsAccounts_Click"/>
        <Label x:Name="labelAccountDetails" Content="Account Details" HorizontalAlignment="Left" Margin="364.8,46,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="textblockFirstName" HorizontalAlignment="Left" Margin="96.4,116,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Grid.Column="3"/>
        <TextBlock x:Name="TextblockLastName" HorizontalAlignment="Left" Margin="96.4,154,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Grid.Column="3" GotFocus="TextblockLastName_GotFocus"/>
        <TextBlock x:Name="textblockBalance" HorizontalAlignment="Left" Margin="96.4,196,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="0.242,-0.031" Grid.Column="3"/>
        <TextBlock x:Name="textblockAccountType" HorizontalAlignment="Left" Margin="96.4,249,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Grid.Column="3"/>
        <TextBlock x:Name="textblockBalance2" HorizontalAlignment="Left" Margin="96.4,285,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="-0.242,0.569" Grid.Column="3"/>
        <TextBlock x:Name="textblockInterest" HorizontalAlignment="Left" Margin="96.4,320,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="-0.387,0.644" Grid.Column="3"/>
        <TextBox x:Name="textboxTransactionAmount" HorizontalAlignment="Left" Height="23" Margin="96.4,381,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.103,0.674" Grid.Column="3"/>
        <Label x:Name="labelFirstName" Content="FirstName" HorizontalAlignment="Left" Margin="377.8,111,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Label x:Name="labelLastName" Content="Last Name" HorizontalAlignment="Left" Margin="377.8,152,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2" GotFocus="labelLastName_GotFocus"/>
        <Label x:Name="labelBalance" Content="Balance" HorizontalAlignment="Left" Margin="377.8,191,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Label x:Name="labelAccountType" Content="Account Type" HorizontalAlignment="Left" Margin="377.8,244,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Label x:Name="labelBalance2" Content="Balance" HorizontalAlignment="Left" Margin="377.8,283,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Label x:Name="labelInterest" Content="Interest" HorizontalAlignment="Left" Margin="377.8,318,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.021,-0.316" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Label x:Name="labelTransactionAmount" Content="Transaction Amount" HorizontalAlignment="Left" Margin="342.8,377,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Button x:Name="buttonDeposit" Content="Deposit" HorizontalAlignment="Left" Margin="236.4,111,0,0" VerticalAlignment="Top" Width="75" Grid.Column="3" Click="buttonDeposit_Click"/>
        <Button x:Name="buttonWithdraw" Content="Withdraw" HorizontalAlignment="Left" Margin="236.4,158,0,0" VerticalAlignment="Top" Width="75" Grid.Column="3" Click="labelWithdraw_Click"/>
        <Button x:Name="buttonInterest2" Content="Interest" HorizontalAlignment="Left" Margin="236.4,202,0,0" VerticalAlignment="Top" Width="75" Grid.Column="3" Click="labelInterest2_Click"/>

    </Grid>
</Window>
